            "location": "UK South",
            "properties": {
                "enabledForDeployment": false,
                "enabledForDiskEncryption": true,
                "enabledForTemplateDeployment": true,
                "tenantId": "[subscription().tenantId]",
                "sku": {
                    "name": "Standard",
                    "family" : "A"
                },
                "accessPolicies": { 
                    "value": [
                    {
                        "objectId": "[parameters('userId')]",
                        "tenantId": "dee63b58-8ba6-46f7-81bc-3613f27c8b88",
                        "permissions": {
                            "keys": [
                                "all"
                            ],
                            "secrets": [
                                "all"
                            ],
                            "certificates": [
                                "all"
                            ]
                          
                        }
                    }
                   
                ]
            }
        }
