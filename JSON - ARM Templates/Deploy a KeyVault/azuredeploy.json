{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "2.0.0.0",
    "parameters": {
    "kvname": {
      "type": "string"
    },
    "templatedeployment": {
      "type": "bool"
    },
    "location": {
      "type": "string"
    },
    "ade": {
      "type": "bool"
    },
    "accessPolicies": {
      "type": "array"
    },
    "tenant": {
      "type": "string"
    },
    "networkAcls": {
      "type": "object"
    }
  },

    "variables": {
        "secretsObject" : [
            {
                "secretName": "AdminAccountName",
                "secretValue": "WiseOldTurtle"
            },
            {
                "secretName": "AdminAccountPassword",
                "secretValue": "@gBeMnO0Qnca"
            }
        ]
    },
    "resources": [
    {
      "apiVersion": "2019-09-01",
      "name": "[parameters('kvname')]",
      "location": "[parameters('location')]",
      "type": "Microsoft.KeyVault/vaults",
      "properties": {
        "enabledForDeployment": "[parameters('templatedeployment')]",
        "enabledForTemplateDeployment": "[parameters('templatedeployment')]",
        "enabledForDiskEncryption": "[parameters('ade')]",
        //"enableRbacAuthorization": true,
        "accessPolicies": "[parameters('accessPolicies')]",
        "tenantId": "[parameters('tenant')]",
        "sku": {
          "name": "standard",
          "family": "A"
        },
        "enableSoftDelete": false,
        //"softDeleteRetentionInDays": "[parameters('softDeleteRetentionInDays')]",
        "networkAcls": "[parameters('networkAcls')]"
      },
      "dependsOn": []
    }
  ],
  "outputs": {}
}
