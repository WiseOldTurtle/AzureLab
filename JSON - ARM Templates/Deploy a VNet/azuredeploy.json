{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnetnames": {
            "type": "array",
            "defaultValue" : [
                "hub",
                "core"
            ]
    },
        "addressPrefix": {
            "type": "array",
            "defaultValue" : [
                "10.0.0.0/16",
                "10.0.1.0/16"
            ],
            "metadata": {
            "description": "description"
            }
        },
            "location": {
               "type": "string",
               "defaultValue" : "Uk South"
               
            }
    
    },
    "variables": {
        "subnetAddressPrefix": [
            "10.0.0.0/24" ,
            "10.0.1.0/24"
        ]
    },
    "resources": [
        {
  "type": "Microsoft.Network/virtualNetworks",
  "apiVersion": "2018-04-01",
  "name": "[concat(parameters('vnetnames'), copyIndex(), '-vnet')]",
  "copy":{
    "count": "[length(parameters('vnetnames'))]",
    "name": "vnetloop"
  },
  "location": "[parameters('location')]",
  "properties": {
    "addressSpace": {
      "addressPrefixes": [
        "[parameters('addressPrefix')]"
      ]
    },
    "copy": [
      {
        "name": "subnets",
        "count": "[length(variables('subnetAddressPrefix'))]",
        "input": {
          "name": "[concat(parameters('vnetnames'), copyIndex('subnets'), '-subnet')]",
          "properties": {
            "addressPrefix": "[variables('subnetAddressPrefix')[copyIndex('subnets')]]"
          }
        }
      }
    ]
  }
}
    ],
    "outputs": {}
}